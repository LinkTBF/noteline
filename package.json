{
  "name": "noteline",
  "displayName": "noteline",
  "description": "A vscode extension to record the line you jumped frequently",
  "version": "1.0.0",
  "author": "SamNofee",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Notebooks",
    "Other"
  ],
  "main": "./build/ts/extension.js",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "noteline.addNote",
        "title": "Noteline: Add note"
      },
      {
        "command": "noteline.deleteCustomNote",
        "title": "Noteline: Delete custom note"
      },
      {
        "command": "noteline.clearSystemNotes",
        "title": "Noteline: Clear system notes"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "noteline_activebar",
          "title": "Noteline",
          "icon": "./src/assets/logo.svg"
        }
      ]
    },
    "views": {
      "noteline_activebar": [
        {
          "type": "webview",
          "id": "noteline_view",
          "name": "Noteline"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "noteline.addNote",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ],
      "webview/context": [
        {
          "command": "noteline.deleteCustomNote",
          "group": "navigation",
          "when": "webviewId == noteline_view"
        },
        {
          "command": "noteline.clearSystemNotes",
          "group": "navigation",
          "when": "webviewId == noteline_view"
        }
      ]
    }
  },
  "scripts": {
    "build": "npm run build:ts && npm run build:vite",
    "build:ts": "npx tsc -p ./tsconfig.extension.json --skipLibCheck",
    "build:vite": "npx vite build",
    "dev": "npx nodemon -e ts,vue,css --exec npm run build",
    "vite": "npx vite ./src/webview --config vite.config.ts --open",
    "lint": "npx eslint \"src/**/*.{ts,vue}\"",
    "test": "TS_NODE_PROJECT='tsconfig.json' npx mocha -- --exit",
    "test:grep": "npm run test --grep"
  },
  "devDependencies": {
    "@types/chance": "^1.1.3",
    "@types/lodash": "^4.14.191",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.17",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "chance": "^1.1.9",
    "eslint": "^8.30.0",
    "eslint-plugin-vue": "^9.8.0",
    "jsdom": "^20.0.3",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "simple-git-hooks": "^2.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "vite": "^2.9.14",
    "vue": "^3.2.45",
    "vue-tsc": "^0.40.6",
    "vuedraggable": "^4.1.0"
  },
  "simple-git-hooks": {
    "pre-push": ""
  },
  "mocha": {
    "spec": "src/**/*.test.ts",
    "require": [
      "ts-node/register"
    ]
  }
}
